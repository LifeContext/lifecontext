# LifeContext API env 
# Copy this file as .env and fill in your actual configuration

# LLM API 
LLM_API_KEY = "your_key"          # Your LLM API key
LLM_BASE_URL = "your_url"         # LLM API endpoint
LLM_MODEL = "your_model"          # Model name

# Embedding API
EMBEDDING_API_KEY = "your_key"    # API key for the embedding service
EMBEDDING_BASE_URL = "your_url"   # Embedding API endpoint
EMBEDDING_MODEL = "your_model"    # Embedding model name

EMAIL_PROVIDER = gmail

# ============================================================================
# Google Workspace API 配置
# ============================================================================
# 获取方式: https://console.cloud.google.com/
GOOGLE_CLIENT_ID = "your_client_id"
GOOGLE_CLIENT_SECRET = "your_client_secret"
GOOGLE_REDIRECT_URI = http://localhost:8000/api/oauth/google/callback

# 请求gmail的HTTP 代理配置
# 格式: http://host:port 或 socks5://host:port
HTTP_PROXY=http://127.0.0.1:7897
HTTPS_PROXY=http://127.0.0.1:7897